@using ExploreGetRssFeed.Models
@using System.ComponentModel.DataAnnotations

<div class="card border-secondary container-sm mb-2">
    <div class="card-header">
        <h5 class="card-title">Title: <a href="@FeedItem.Link" class="link-primary">@FeedItem.Title</a></h5>
        <p class="card-subtitle">Published: @FeedItem.PubDateFormatted()</p>
    </div>
    <p class="card-body">
        @FeedItem.Description
    </p>
</div>

@code {
    [Parameter]
    public required FeedModel FeedItem { get; set; }
}
